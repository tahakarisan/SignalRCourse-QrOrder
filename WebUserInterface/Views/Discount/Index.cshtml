@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kampanya Tabloları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kampanya Tablosu</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kampanya ile ilgili veriler burada.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Miktar</th>
									<th scope="col">Url</th>
									<th scope="col">Başlık</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Description</td>
										<td>@item.Amount</td>
										<td>@item.ImageUrl</td>
										<td>@item.Title</td>
										<td>
											<a asp-controller="Discount"
											   asp-action="DeleteDiscount"
											   asp-route-id="@item.Id"
											   class="btn btn-outline-danger">
												Sil
											</a>
										</td>
										<td>
											<a href="/Discount/UpdateDiscount/@item.Id" class="btn btn-outline-success">Güncelle</a>
										</td>

									</tr>
								}
							</tbody>
						</table>
						<a href="/Discount/CreateDiscount/" class="btn btn-outline-primary">Yeni Kampanya Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
