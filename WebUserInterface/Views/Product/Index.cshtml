@model List<WebUserInterface.Dtos.ResultProductDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün Tabloları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Ürün Tablosu</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ürünler ile ilgili veriler burada.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün Adı</th>
									<th scope="col">Fiyat</th>
									<th scope="col">Kategori</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Name</td>
										<td>@item.Price</td>
										<td>@item.CategoryName</td>
										<td>@(item.Status ? "Aktif" : "Pasif")</td>
										<td>
											<a asp-controller="Product"
											   asp-action="DeleteProduct"
											   asp-route-id="@item.Id"
											   class="btn btn-outline-danger">
												Sil
											</a>
										</td>
										<td>
											<a href="/Product/UpdateProduct/@item.Id" class="btn btn-outline-success">Güncelle</a>
										</td>

									</tr>
								}
							</tbody>
						</table>
						<a href="/Product/CreateProduct/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
