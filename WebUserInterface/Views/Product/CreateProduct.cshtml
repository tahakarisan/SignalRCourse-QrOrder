@model WebUserInterface.Dtos.CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün Ekleme Formu</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="productName">Ürün Adını Giriniz</label>
								<input type="text" class="form-control" id="productName" asp-for="Name" placeholder="Ürün Adı Girin">
							</div>
							<div class="form-group">
								<div class="form-group">
									<label for="price">Ürün Kategorisini Seçiniz</label>
									@Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
								</div>
							</div>
							</div>
							<div class="form-group">
								<label for="description">Açıklama Giriniz</label>
								<input type="text" class="form-control" id="description" asp-for="Description" placeholder="Açıklama Girin">
							</div>
							<div class="form-group">
								<label for="price">Fiyat Giriniz</label>
								<input type="number" class="form-control" id="price" asp-for="Price" placeholder="Fiyat Girin">
							</div>
							<div class="form-group">
								<label for="productImage">Fotoğraf Ekleyin</label>
								<input type="text" class="form-control" id="productImage" asp-for="ImageUrl" placeholder="Fotoğraf Ekle">
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ürün Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>